<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder>
            <pattern>%date [%thread] - %level %logger{18} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO ">
        <appender-ref ref="STDERR"/>
    </root>
</configuration>
